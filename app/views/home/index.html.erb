<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Welcome</h1>
        <p class="lead text-muted">We are glad to see you in our coffee shop.</p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @menus.each do |menu| %>
          <div class="col">
            <div class="card shadow-sm">
              <image src="<%=(url_for(menu.image.variant(resize_to_limit: [300, 300])))%>">

              <div class="card-body">
                <p class="card-text">Title: <%= menu.title %></p>
                <p class="card-text">Price: <%= menu.price %>$</p>
 
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">Order it</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
    </div>
  </div>

</main>