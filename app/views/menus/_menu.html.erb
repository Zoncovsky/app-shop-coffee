<div class="col">
  <div class="card shadow-sm">
    <image src="<%=(url_for(menu.image.variant(resize_to_limit: [300, 300])))%>">

    <div class="card-body">
      <p class="card-text">Title: <%= menu.title %></p>
      <p class="card-text">Price: <%= menu.price %>$</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "View", menu, class:"btn btn-sm btn-outline-secondary" %> 
          <button type="button" class="btn btn-sm btn-outline-secondary">Order it</button>
        </div>
          <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>